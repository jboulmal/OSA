#!/bin/sh
# postinst script for appliance-manager
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Source debconf library.
. /usr/share/debconf/confmodule
db_version 2.0

INSTALLDIR="/usr/share/nursery"

case "$1" in
    configure)
        # Get parameters from debconf
        OPTIONS=""
        RET=""
        db_get appliance-manager/mysql-root-password
        if [ "$RET" != "" ] ; then
            OPTIONS="$OPTIONS -mysql-root-password $RET"
        fi
        RET=""
        db_get appliance-manager/mysql-osa-password
        if [ "$RET" != "" ] ; then
            OPTIONS="$OPTIONS -mysql-osa-password $RET"
        fi
        RET=""
        db_get appliance-manager/admin-new-password
        if [ "$RET" != "" ] ; then
            OPTIONS="$OPTIONS -admin-new-password $RET"
        fi
        
        # Calling configure-osa.sh with parameters
        cd $INSTALLDIR/ApplianceManager/RunTimeAppliance/shell
        ./configure-osa.sh $OPTIONS
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# Tell DEBCONF to stop
# Bug see: http://bugs.debian.org/cgi-bin/bugreport.cgi?bug=164396
db_stop

exit 0
